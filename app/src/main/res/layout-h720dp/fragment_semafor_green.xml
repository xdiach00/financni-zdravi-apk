<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sourcesanspro"
        android:text="Vaše analýza je připravena:"
        android:textColor="@color/blue_dark"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/layoutSemaforGreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/imgSemaforGreen"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/semafor_green"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dobrá zpráva! Vaše nezbytné životní náklady
tvoří méně jak polovinu Vašich disponibilních příjmů. Vaše finanční rezerva je dostatečná.
Pokud je to možné, je vhodné odkládat 20 % příjmů bokem i poté, co je vytvořena rezerva na
3-6 měsíců. Finanční prostředky je vhodné investovat v diverzifikovaném portfoliu - tzv.
krátké a dlouhé peníze v závislosti na likviditě. Krátké peníze - vysoká likvidita a nízké riziko -
tyto peníze je možné vybrat prakticky ihned. Dlouhé peníze - podílové fondy, dluhopisy,
termínované vklady - vyšší výnosy i riziko, nižší likvidita."
            android:layout_below="@+id/imgSemaforGreen"
            android:textColor="@color/blue_dark"
            android:fontFamily="@font/sourcesanspro"
            android:background="@drawable/semafor_outline"
            android:gravity="center"
            android:textSize="14dp"
            android:layout_marginHorizontal="25dp"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:layout_marginTop="15dp"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="18dp"
        android:layout_toStartOf="@+id/imageGoNext"
        android:layout_toLeftOf="@+id/imageGoNext"
        android:fontFamily="@font/sourcesanspro"
        android:text="POKRAČOVAT NA DETAIL"
        android:textColor="@color/blue_dark"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/imageGoNext"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:rotation="90"
        android:src="@drawable/ic_arrow" />
</RelativeLayout>