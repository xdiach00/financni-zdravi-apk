<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sourcesanspro"
        android:text="Vaše analýza je připravena:"
        android:textColor="@color/blue_dark"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/layoutSemaforYellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/imgSemaforYellow"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/semafor_yellow"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vaše nezbytné životní
náklady tvoří méně jak polovinu Vašich disponibilních příjmů. Bohužel vaše finanční rezerva
je nedostatečná. Snižte náklady snížením nákladů na položky z kategorie 30% - chci a ušetřené
peníze spořte. Ideální finanční rezerva je šestinásobek (nejméně však trojnásobek)
průměrných finančních výdajů."
            android:layout_below="@+id/imgSemaforYellow"
            android:textColor="@color/blue_dark"
            android:fontFamily="@font/sourcesanspro"
            android:background="@drawable/semafor_outline"
            android:gravity="center"
            android:textSize="14dp"
            android:layout_marginHorizontal="25dp"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:layout_marginTop="15dp"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="18dp"
        android:layout_toStartOf="@+id/imageGoNext"
        android:layout_toLeftOf="@+id/imageGoNext"
        android:fontFamily="@font/sourcesanspro"
        android:text="POKRAČOVAT NA DETAIL"
        android:textColor="@color/blue_dark"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/imageGoNext"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:rotation="90"
        android:src="@drawable/ic_arrow" />
</RelativeLayout>